extends layout.pug

block variables
	- var pageTitle = "Главная"

		
block content
	div.content__wrapper
		div#slider.slider
			each item, key in slider
				div.slider__item(class=`slider__item_number_${key + 1}`)
					div.container
						div.slider__text-wrapper
							if item.title
								h1.slider__title=item.title
							div.slider__description=item.descr
							button.slider__button.button=item.link